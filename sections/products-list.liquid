{% assign collection = collections['Featured-Products'] %}

{% assign welcome_message = "Welcome to our store! We’re glad you’re here." %}
<h1>{{ welcome_message }}</h1>
<div style="display: flex; flex-wrap: wrap; gap: 30px; margin: 20px 50px">

    {% comment %}{% if collection.products.size > 10 %}{% endcomment %}
    {% comment %}<h1 style="width: 100%"> We have an amazing selection of featured products!</h1>{% endcomment %}
    {% comment %}{% else %}{% endcomment %}
    {% comment %}<h1 style="width: 100%">Check out our exclusive featured products!</h1>{% endcomment %}
    {% comment %}{% endif %}{% endcomment %}

    {% for product in collection.products -%}

        <a href="{{ product.url }}" style="text-decoration: none; color: inherit">
            <div class="product"
                 style="box-sizing: border-box;box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1); border: 2px solid #FFFDF0; padding: 20px; width: 400px; height: 400px; ">
                <h2 style="font-size: 0.9em">{{ product.title }}</h2>
                {{ product.featured_image | img_url: '250x250' | img_tag }}
                <p>Price: {{ product.price | money_with_currency }}</p>
            </div>
        </a>
    {% endfor %}
</div>

{% assign testimonials = "Great service!,Loved the products!,Fast delivery!" | split: "," %}
<h2>What Our Customers Say:</h2>
<ul>
{% for testimonial in testimonials %}
<li>{{ testimonial }}</li>
{% endfor %}
</ul>